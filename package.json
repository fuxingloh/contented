{
  "name": "@birthdayresearch/contented-workspace",
  "private": true,
  "workspaces": [
    "./packages/contented",
    "./packages/contented-cli",
    "./packages/contented-processor",
    "./packages/contented-tests",
    "./packages/eslint-config",
    "./packages/jest-preset"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "format": "prettier --write .",
    "lint": "turbo run lint -- --fix",
    "prepare": "husky install",
    "test": "turbo run test"
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "lerna": "^5.1.8",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.12",
    "turbo": "^1.3.4"
  }
}
