{
  "name": "@birthdayresearch/contented-workspace",
  "private": true,
  "workspaces": [
    "./packages/*",
    "./packages/contented-example/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "write": "turbo run write",
    "watch": "turbo run watch",
    "generate": "turbo run generate",
    "format": "prettier --write .",
    "lint": "turbo run lint -- --fix",
    "prepare": "husky install",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@birthdayresearch/eslint-config": "0.6.2",
    "@birthdayresearch/sticky-prettier": "0.6.2",
    "lerna": "^6.6.1",
    "turbo": "^1.9.4"
  },
  "prettier": "@birthdayresearch/sticky-prettier",
  "lint-staged": {
    "*": "prettier --write --ignore-unknown"
  }
}
