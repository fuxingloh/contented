{
  "name": "@contentedjs/contented-pipeline",
  "version": "0.0.0",
  "private": false,
  "repository": {
    "url": "git+https://github.com/levaintech/contented"
  },
  "type": "module",
  "main": "./dist/index.js",
  "source": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -b ./tsconfig.build.json",
    "clean": "rm -rf dist",
    "lint": "eslint src",
    "test": "jest"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "@workspace"
    ],
    "rules": {
      "no-param-reassign": "off"
    }
  },
  "jest": {
    "preset": "@workspace/jest-preset"
  },
  "dependencies": {
    "@sindresorhus/slugify": "^2.2.1"
  },
  "devDependencies": {
    "@types/unist": "^2.0.8",
    "@workspace/jest-preset": "workspace:*"
  }
}
