{
  "compilerOptions": {
    "lib": [
      "ES2021"
    ],
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noErrorTruncation": true,
    "resolveJsonModule": true,
    "target": "ES2020"
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts"]
}
