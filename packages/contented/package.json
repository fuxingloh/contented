{
  "name": "@contentedjs/contented",
  "version": "0.0.0",
  "private": false,
  "repository": {
    "url": "git+https://github.com/fuxingloh/contented"
  },
  "type": "module",
  "main": "./dist/index.js",
  "source": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "bin": {
    "contented": "./cli.js"
  },
  "files": [
    "dist",
    ".preview",
    "cli.js"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json && node build-preview.js",
    "clean": "rm -rf dist",
    "lint": "eslint ."
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "dependencies": {
    "@contentedjs/contented-pipeline": "workspace:*",
    "@contentedjs/contented-processor": "workspace:*",
    "@parcel/watcher": "^2.4.0",
    "clipanion": "3.2.1",
    "debounce": "^1.2.1",
    "ignore-walk": "^6.0.4"
  },
  "devDependencies": {
    "@types/debounce": "^1.2.4",
    "@types/ignore-walk": "^4.0.3",
    "@workspace/jest-preset": "workspace:*",
    "@workspace/tsconfig": "workspace:*"
  }
}
