{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "clean": {
      "cache": false
    },
    "build": {
      "inputs": ["tsconfig.json", "src/**"],
      "outputs": ["dist/**"],
      "dependsOn": ["^build"]
    },
    "watch": {
      "cache": false,
      "inputs": ["**/.md"],
      "dependsOn": ["build"]
    },
    "write": {
      "cache": false,
      "inputs": ["**/.md"],
      "dependsOn": ["build"]
    },
    "generate": {
      "inputs": ["**/.md"],
      "dependsOn": ["build"]
    },
    "test": {
      "inputs": ["src/**", "**/*.unit.ts"],
      "outputs": [],
      "dependsOn": ["build"]
    },
    "lint": {
      "outputs": []
    }
  },
  "globalDependencies": [".eslintrc.js"]
}
